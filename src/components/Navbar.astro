---
const links = [
  "Crochiuri",
  "Cronica de carte",
  "Atelier literar",
  "Patrimoniu",
  "Evenimente culturale",
];
import "@fontsource/lobster";
---

<div class="navbar bg-base-300 w-full fixed z-[999]">
    <div class="navbar-start">
        <div class="dropdown">
            <label tabindex="0" class="btn btn-ghost lg:hidden">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h8m-8 6h16"></path></svg
                >
            </label>
            <ul
                tabindex="0"
                class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
            >
                {
                    links.map((link) => {
                        return (
                            <li>
                                <a href={"/" + link}>{link}</a>
                            </li>
                        );
                    })
                }
            </ul>
        </div>
        <a
            href="/"
            class="btn btn-ghost font-normal normal-case text-2xl font-[Lobster]"
            >Monoclu: Boto»ôani +</a
        >
    </div>
    <div class=" hidden sm:block">
        <ul class="menu menu-horizontal px-1">
            {
                links.map((link) => {
                    return (
                        <li>
                            <a href={"/" + link}>{link}</a>
                        </li>
                    );
                })
            }
        </ul>
    </div>
</div>
